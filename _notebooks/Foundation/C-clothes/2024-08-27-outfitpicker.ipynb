    "<script>\n",
    " let closet = JSON.parse(localStorage.getItem('closet')) || [];\n",
    "\n",
    "        // Function to add clothes to the closet and save to local storage\n",
    "function addClothes() {\n",
    "    const clothesCategory = document.getElementById(\"clothesCategory\").value;\n",
    "    const clothesType = document.getElementById(\"clothesType\").value;\n",
    "    const item = {\n",
    "        category: clothesCategory,\n",
    "        type: clothesType,\n",
    "        imgSrc: getImageSource(clothesType)\n",
    "    };\n",
    "    closet.push(item);\n",
    "    localStorage.setItem('closet', JSON.stringify(closet));\n",
    "    displayCloset();\n",
    "}\n",
    "\n",
    "        // Function to display the closet items\n",
    "        function displayCloset() {\n",
    "    const closetTops = document.getElementById(\"closet-tops\");\n",
    "    const closetBottoms = document.getElementById(\"closet-bottoms\");\n",
    "    const closetShoes = document.getElementById(\"closet-shoes\");\n",
    "\n",
    "    // Clear previous items\n",
    "    closetTops.innerHTML = '';\n",
    "    closetBottoms.innerHTML = '';\n",
    "    closetShoes.innerHTML = '';\n",
    "\n",
    "    closet.forEach((item, index) => {\n",
    "        const itemDiv = document.createElement(\"div\");\n",
    "        itemDiv.className = \"item\";\n",
    "\n",
    "        // Create image element for the item\n",
    "        const img = document.createElement(\"img\");\n",
    "        img.src = item.imgSrc;\n",
    "\n",
    "        // Create delete button\n",
    "        const deleteBtn = document.createElement(\"button\");\n",
    "        deleteBtn.className = \"delete-btn\";\n",
    "        deleteBtn.innerText = \"X\";\n",
    "        deleteBtn.onclick = () => deleteClothes(index);\n",
    "\n",
    "        itemDiv.appendChild(img);\n",
    "        itemDiv.appendChild(deleteBtn);\n",
    "\n",
    "        // Append to the appropriate section based on category\n",
    "        if (item.category === \"tops\") {\n",
    "            closetTops.appendChild(itemDiv);\n",
    "        } else if (item.category === \"bottoms\") {\n",
    "            closetBottoms.appendChild(itemDiv);\n",
    "        } else if (item.category === \"shoes\") {\n",
    "            closetShoes.appendChild(itemDiv);\n",
    "        }\n",
    "    });\n",
    "}\n",
    "\n",
    "function deleteClothes(index) {\n",
    "            closet.splice(index, 1);\n",
    "            localStorage.setItem('closet', JSON.stringify(closet));\n",
    "            displayCloset();\n",
    "        }\n",
    "        // Function to get the image source based on the clothing type\n",
    "        function getImageSource(type) {\n",
    "            switch (type) {\n",
    "                case \"blackHoodie\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blackhoodie.jpeg\";\n",
    "                case \"blackPants\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blackpants.jpeg\";\n",
    "                case \"blackShoes\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blackshoes.jpeg\";\n",
    "                case \"blackShorts\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blackshorts.jpeg\";\n",
    "                case \"blackSweater\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blacksweater.jpeg\";\n",
    "                case \"blueCollar\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/bluecollar.jpeg\";\n",
    "                case \"bluePants\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/bluepants.jpeg\";\n",
    "                case \"blueQuarterZip\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/bluequarterzip.jpeg\";\n",
    "                case \"blueShorts\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blueshorts.jpeg\";\n",
    "                case \"greenPants\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/greenpants.jpeg\";\n",
    "                case \"whiteButtonUp\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/whitebuttonup.jpeg\";\n",
    "                case \"whiteShirt\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/whiteshirt.jpeg\";\n",
    "                case \"whiteShoes\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/whiteshoes.jpeg\";\n",
    "                case \"blueShirt\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/blueshirt.jpeg\";\n",
    "                case \"greyLongSleeve\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/greylongsleeve.jpeg\";\n",
    "                case \"khakiPants\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/khakipants.jpeg\";\n",
    "                case \"whiteShorts\":\n",
    "                    return \"{{site.baseurl}}/images/outfits/whiteshorts.jpeg\";\n",
    "                default:\n",
    "                    return \"{{site.baseurl}}/images/outfits/blackhoodie.jpeg\";\n",
    "            }\n",
    "        }\n",
    "\n",
    "        // Display the closet items on page load\n",
    "        window.onload = displayCloset;\n",
    "\n",
    "        // Populate clothing types based on the selected category\n",
    "        document.getElementById('clothesCategory').addEventListener('change', function() {\n",
    "            const clothesTypeSelect = document.getElementById('clothesType');\n",
    "            clothesTypeSelect.innerHTML = ''; // Clear previous options\n",
    "\n",
    "            const category = this.value;\n",
    "            let options = '';\n",
    "\n",
    "            if (category === 'tops') {\n",
    "                options = `\n",
    "                    <option value=\"blackHoodie\">Black Hoodie</option>\n",
    "                    <option value=\"blackSweater\">Black Sweater</option>\n",
    "                    <option value=\"blueCollar\">Blue Collar</option>\n",
    "                    <option value=\"greyLongSleeve\">Grey Long Sleeve</option>\n",
    "                    <option value=\"blueQuarterZip\">Blue Quarter Zip</option>\n",
    "                    <option value=\"blueShirt\">Blue Shirt</option>\n",
    "                    <option value=\"whiteButtonUp\">White Button Up</option>\n",
    "                    <option value=\"whiteShirt\">White Shirt</option>\n",
    "                `;\n",
    "            } else if (category === 'bottoms') {\n",
    "                options = `\n",
    "                    <option value=\"blackPants\">Black Pants</option>\n",
    "                    <option value=\"bluePants\">Blue Pants</option>\n",
    "                    <option value=\"greenPants\">Green Pants</option>\n",
    "                    <option value=\"khakiPants\">Khaki Pants</option>\n",
    "                    <option value=\"blueShorts\">Blue Shorts</option>\n",
    "                    <option value=\"whiteShorts\">White Shorts</option>\n",
    "                    <option value=\"blackShorts\">Black Shorts</option>\n",
    "                `;\n",
    "            } else if (category === 'shoes') {\n",
    "                options = `\n",
    "                    <option value=\"blackShoes\">Black Shoes</option>\n",
    "                    <option value=\"whiteShoes\">White Shoes</option>\n",
    "                `;\n",
    "            }\n",
    "\n",
    "            clothesTypeSelect.innerHTML = options;\n",
    "        });\n",
    "\n",
    "\n",
    "    // Replace with your Tomorrow.io API key\n",
    " // API Key and Del Norte High School coordinates\n",
    "const apiKey = \"hQztB99oChLUuctAYIzIRnuyxjD3wHPF\";\n",
    "const delnorteschool = {\n",
    "    latitude: 33.0061,\n",
    "    longitude: -117.1183\n",
    "};\n",
    "\n",
    "// Fields to retrieve\n",
    "const fields = [\n",
    "    \"temperature\",\n",
    "];\n",
    "\n",
    "// Unit system - 'metric' for Celsius, 'imperial' for Fahrenheit\n",
    "const units = \"imperial\";\n",
    "\n",
    "// Timestep - '1h' for hourly data\n",
    "const timestep = \"1h\";\n",
    "\n",
    "// Timeframe configuration\n",
    "const now = moment.utc();\n",
    "const startTime = moment.utc(now).toISOString();\n",
    "const endTime = moment.utc(now).add(1, \"hours\").toISOString(); // Changed to 1 hour\n",
    "\n",
    "// Timezone\n",
    "const timezone = \"America/Los_Angeles\";\n",
    "\n",
    "// Construct the API URL\n",
    "const params = new URLSearchParams({\n",
    "    apikey: apiKey,\n",
    "    location: `${delnorteschool.latitude},${delnorteschool.longitude}`,\n",
    "    fields: fields.join(\",\"),\n",
    "    units: units,\n",
    "    timesteps: timestep,\n",
    "    startTime: startTime,\n",
    "    endTime: endTime,\n",
    "    timezone: timezone\n",
    "});\n",
    "\n",
    "const apiUrl = `https://api.tomorrow.io/v4/timelines?${params.toString()}`;\n",
    "\n",
    "// Fetch weather data and generate outfit\n",
    "async function fetchWeatherData() {\n",
    "    try {\n",
    "        let temperature = localStorage.getItem('temperature');\n",
    "        const lastFetchTime = localStorage.getItem('lastFetchTime');\n",
    "        const now = new Date().getTime();\n",
    "\n",
    "        // Check if temperature is stored and if it's less than an hour old\n",
    "        if (!temperature || (now - lastFetchTime > 3600000)) { // 1 hour in milliseconds\n",
    "            const response = await fetch(apiUrl);\n",
    "            if (!response.ok) {\n",
    "                throw new Error(`API request failed with status ${response.status}`);\n",
    "            }\n",
    "            const data = await response.json();\n",
    "\n",
    "            console.log(data)\n",
    "            // Extract the temperature\n",
    "            temperature = data.data.timelines[0].intervals[0].values.temperature;\n",
    "            \n",
    "            // Store the temperature and fetch time in localStorage\n",
    "            localStorage.setItem('temperature', temperature);\n",
    "            localStorage.setItem('lastFetchTime', now);\n",
    "        }\n",
    "\n",
    "        document.getElementById(\"temperature\").innerText = `${temperature} °F`;\n",
    "\n",
    "        // Generate the outfit based on temperature\n",
    "        generateOutfit(Number(temperature));\n",
    "    } catch (error) {\n",
    "        console.error(\"Error fetching weather data:\", error);\n",
    "    }\n",
    "}\n",
    "\n",
    "// Function to generate an outfit based on temperature\n",
    "function generateOutfit(temperature) {\n",
    "    const outfitDiv = document.getElementById(\"outfit\");\n",
    "    outfitDiv.innerHTML = '';\n",
    "\n",
    "    // Check if there are clothes in the closet\n",
    "    if (closet.length === 0) {\n",
    "        outfitDiv.innerHTML = \"You don't have any clothes in your closet.\";\n",
    "        return;\n",
    "    }\n",
    "\n",
    "    // Separate closet items by category\n",
    "    const tops = closet.filter(item => item.category === \"tops\");\n",
    "    const bottoms = closet.filter(item => item.category === \"bottoms\");\n",
    "    const shoes = closet.filter(item => item.category === \"shoes\");\n",
    "\n",
    "    // Ensure there is at least one item in each category\n",
    "    if (tops.length === 0 || bottoms.length === 0 || shoes.length === 0) {\n",
    "        outfitDiv.innerHTML = \"You need at least one top, bottom, and pair of shoes to generate an outfit.\";\n",
    "        return;\n",
    "    }\n",
    "\n",
    "    // Randomly select items from each category\n",
    "    const randomTop = tops[Math.floor(Math.random() * tops.length)];\n",
    "    const randomBottom = bottoms[Math.floor(Math.random() * bottoms.length)];\n",
    "    const randomShoes = shoes[Math.floor(Math.random() * shoes.length)];\n",
    "\n",
    "    // Create image elements for each selected item\n",
    "    const topImg = document.createElement(\"img\");\n",
    "    const bottomImg = document.createElement(\"img\");\n",
    "    const shoesImg = document.createElement(\"img\");\n",
    "\n",
    "    topImg.src = randomTop.imgSrc;\n",
    "    bottomImg.src = randomBottom.imgSrc;\n",
    "    shoesImg.src = randomShoes.imgSrc;\n",
    "\n",
    "    // Set styling for images\n",
    "    topImg.style.width = \"100px\";\n",
    "    bottomImg.style.width = \"100px\";\n",
    "    shoesImg.style.width = \"100px\";\n",
    "    topImg.style.margin = \"5px\";\n",
    "    bottomImg.style.margin = \"5px\";\n",
    "    shoesImg.style.margin = \"5px\";\n",
    "\n",
    "    // Display images based on temperature\n",
    "    if (temperature >= 75) {\n",
    "        // Warm weather: Prefer shorts and a shirt or pants and a shirt\n",
    "        if (randomBottom.type === \"shorts\" && randomTop.type.includes(\"Shirt\")) {\n",
    "            outfitDiv.appendChild(topImg);\n",
    "            outfitDiv.appendChild(bottomImg);\n",
    "            outfitDiv.appendChild(shoesImg);\n",
    "        } else if (randomTop.type.includes(\"Shirt\") && randomBottom.type !== \"shorts\") {\n",
    "            outfitDiv.appendChild(topImg);\n",
    "            outfitDiv.appendChild(bottomImg);\n",
    "            outfitDiv.appendChild(shoesImg);\n",
    "        } else {\n",
    "            outfitDiv.innerHTML = \"You don't have the clothes to make a warm weather outfit.\";\n",
    "        }\n",
    "    } else {\n",
    "        // Cool weather: Prefer pants and a sweater, but avoid shorts and a shirt together\n",
    "        if (randomBottom.type === \"pants\" && randomTop.type.includes(\"Sweater\")) {\n",
    "            outfitDiv.appendChild(topImg);\n",
    "            outfitDiv.appendChild(bottomImg);\n",
    "            outfitDiv.appendChild(shoesImg);\n",
    "        } else if (randomBottom.type !== \"shorts\") {\n",
    "            outfitDiv.appendChild(topImg);\n",
    "            outfitDiv.appendChild(bottomImg);\n",
    "            outfitDiv.appendChild(shoesImg);\n",
    "        } else {\n",
    "            outfitDiv.innerHTML = \"You don't have the clothes to make a cool weather outfit.\";\n",
    "        }\n",
    "    }\n",
    "}\n",
    "\n",
    "</script>"
   ]
  }
